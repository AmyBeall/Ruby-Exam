<div class="header">
	<h2>Welcome!</h2>
</div>
<div class='error_explanation'>
	<% if flash[:error] %>	
		<%= flash[:error] %>
	<% end %>	
	<% if @user.errors.any? %>	
		<h4><%= pluralize(@user.errors.count, "error")%> prohibited the post from being saved</h4>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>	
		</ul>
	<% end %>		
</div>
<div id="registration" class="column">
	<h2>Register</h2>
	<form action="/users" method="post">
		<input name="authenticity_token" value="<%= form_authenticity_token%>" type="hidden">
		<label> Name: </label>
		<input type="text" name="user[name]">
		<label> Alias: </label>
		<input type="text" name="user[alias]">
		<label> Email: </label>
		<input type="text" name="user[email]">
		<label> Password: </label>
		<input type="password" name="user[password]">
		<label> Password Confirmation: </label>
		<input type="password" name="user[password_confirmation]">
		<input type="submit" class="button1" value="Register">
	</form>
</div>
<div id="login" class="column">
	<h2>Log In</h2>
	<form action="/sessions" method='post'>
		<input name="authenticity_token" value="<%= form_authenticity_token%>" type="hidden">
		<label>Email:</label>
		<input type="text" name="session[email]">
		<label>Password:</label>
		<input type="text" name="session[password]">
		<input type="submit" class="button1" value="Log In">
	</form>
</div>